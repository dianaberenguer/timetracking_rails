<% if @entry.errors.any? %>
	<ul>
		<% @entry.errors.full_messages.each do |error_msg| %>
			<li><%= error_msg %></li>
		<% end %>
	</ul>
<% end %>

<div class="row">
  	<div class="col-md-4 col-md-offset-4 bgray" style="padding: 30px">
		<%= form_for [@project, @entry] do |f| %>
			<%= f.label :hours %>
			<%= f.text_field :hours, class: "form-control" %>
			</br>
			<%= f.label :minutes %>
			<%= f.text_field :minutes, class: "form-control" %>
			</br>
			<%= f.label :date  %>
			<%= f.date_select :date, {}, {:class => "form-control mtop"} %>
			</br>

			<%= f.submit class: "btn btn-primary btn-sm" %>
			<%= link_to('Cancel', project_entries_path(@project), class: "btn btn-default btn-sm")  %>
		<% end %>
	</div>
</div>
